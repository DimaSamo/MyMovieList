<h1>Welcome to MyMovieList</h1>
<br>
<%if logged_in?%>
  <h3>Welcome <%=current_user.user_name.capitalize%></h3>
  <form method="POST" action="/logout">
    <input type="submit" value="Logout">
  </form>
  <h2>Your Movie List:</h2>
  <%current_user.movies.each do |movie|%>
    <div>
      <img src="<%=movie.image_url%>" alt="Movie Poster" height="150" width="120">
      <br>
      <a href="/movies/<%=movie.id%>"><%=movie.title%></a>
      <br>
      <br>
  </div>
  <%end%>
<%else%>
  <h2>Please Log in or <a href="/signup">Sign Up</a><h2>
  <form method="POST" action="/login">
    <label for="user_name">User Name:</label>
    <input type="text" name="user_name">
    <label for="password">Password:</label>
    <input type="password" name="password">
    <input type="submit" value="Search">
  </form>
<%end%>
